{% extends 'SonataAdminBundle:CRUD:base_show_field.html.twig' %}

{% block field %}
    {% if object.getExcursionImages() | length > 0 %}
        <ul style="list-style-type: none;">
            {% for image in object.getExcursionImages() %}
                <li style="display: inline;margin-right: 10px;">
                    <a href="{{ path('excursion_image_admin_edit',{'id' : image.id}) }}">
                        <img src="{{ asset(image.getSmallImageUrl(150,150)) }}" title="{{ object }}" alt="{{ object }}" />
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}